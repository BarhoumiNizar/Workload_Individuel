{% extends 'layout.html.twig' %}

{% block title %}New Projet{% endblock %}
              {% block entete %}
                            <h4 class="page-title pull-left">Projet</h4>
                            <ul class="breadcrumbs pull-left">
                                <li><a href="index.html">Add</a></li>
                                <li><span>Form</span></li>
                            </ul>
				{% endblock %}
{% block main %}
 
    <style>
      #ressources_form_web input{width:100px}
      label,#ressources_form_web label{font-size:17px;}
         #ressources_form_web label{position:relative;left:-30px}
    </style>
         {# {{ include('ressources/_form.html.twig') }}#}
		 <div class="row" style="width:70%;margin:auto">
                            <!-- Textual inputs start -->
                            <div class="col-12 mt-5" style="width:100%" >
                                <div class="card"style="width:100%">
                                    <div class="card-body" style="width:100%">
                                        <h4 class="header-title">{{activation}} >> {{classe}}</h4>
                                        {% for message in app.flashes('verificationProjet') %}
                                          <div class="alert alert-danger">
                                              {{ message }}
                                          </div>
                                      {% endfor %}
										 {{ form_start(form) }}
										 <div class="form-group">
                                            <label for="example-text-input" class="col-form-label">{{ form_label(form.nomProjet) }}</label>
                                          {{ form_widget(form.nomProjet) }}
                                        </div>

										 <div class="form-group">
                                            <label for="example-text-input" class="col-form-label">{{ form_label(form.priorite) }}</label>
                                          {{ form_widget(form.priorite) }}
                                        </div>

										 <div class="form-group">
                                            <label for="example-text-input" class="col-form-label">Competences</label>
                                          <input type="text" name="competence[]" class="form-control">
                                        </div>

										 <div class="form-group">
                                            <label for="example-text-input" class="col-form-label">{{ form_label(form.nombreRessorces) }}</label>
                                          {{ form_widget(form.nombreRessorces) }}
                                        </div>

										 <div class="form-group">
                                            <label for="example-text-input" class="col-form-label">{{ form_label(form.niveau_competences) }}</label>
                                          {{ form_widget(form.niveau_competences) }}
                                        </div>
											<div class="col-sm-9 col-sm-offset-3" style="float:right;width:40%">
												<button class="btn btn-primary" type="submit">Valider</button>
												<button type="reset" class="btn btn-default">Annuler</button>
											</div>

										{{ form_end(form) }}
									</div>
								</div>
							</div>
		</div>

 
{% endblock %}
