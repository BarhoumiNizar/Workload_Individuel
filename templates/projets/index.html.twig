{% extends 'layout.html.twig' %}

{% block title %}Projets index{% endblock %}

{% block main %}
   
 <!-- Progress Table start -->
                    <div class="col-12 mt-5">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="header-title">Projets index</h4>
                                <div class="single-table">
                                    <div class="table-responsive">
                                        <table class="table table-hover progress-table text-center">
                                            <thead class="text-uppercase">
                                                <tr>
                                                
                                                    <th scope="col">ID</th>
                                                    <th scope="col">Projet</th>
                                                    <th scope="col">Priorités</th>
                                                    <th scope="col">Compétences</th>
                                                    <th scope="col">Nombre de Ressources</th>
                                                    <th scope="col">Niveau de Compétences</th>
                                                    <th scope="col">Etat</th>
                                                    <th scope="col">action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                             {% for projet in projets %}
                                              
                
                                                <tr>
                                                    <th scope="row">{{ projet.id }}</th>
                                                    <td>{{ projet.nomProjet }}</td>
                                                    <td>{{ projet.priorite }}</td>
                                                    
                                                   
                                                   <td>
                                                    {% for cmpt in projet.competence  %}
                                                   {{ cmpt }}
                                                   {% endfor %}
                                                   </td>
                                                    <td>{{ projet.nombreRessorces }}</td>
                                                    <td>{{ projet.niveauCompetences }}</td>
                                                    <td>
                                                    <span {% if projet.etat=='Désactiver' %} class="btn btn-danger mb-3"{% else %}   class="btn btn-sm btn-success"   {% endif %}>
                                                    {{ projet.etat }}
                                                    </span>
                                                    </td>
                                                    <td>
                                                        <ul class="d-flex justify-content-center">
                                                            <li class="mr-3">
                                                                <a href="#" class="text-secondary">
                                                                    <i class="fa fa-edit"></i>
                                                                </a>
                                                            </li>
                                                            <li>
                                                                <a href="{{path('projets_Supprimet_desactiver')}}" class="text-danger" onclick="if(!confirm('Voulez-vous supprimer ce Projet ?')) return false">
                                                                    <i class="ti-trash"></i>
                                                                </a>
                                                            </li>
                                                        </ul>
                                                    </td>
                                                </tr>
                                                 {% else %}
                                                <tr>
                                                    <td colspan="10">no records found</td>
                                                </tr>
                                            {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Progress Table end -->
   
    
{% endblock %}
