{% extends 'layout.html.twig' %}

{% block title %}{{activation}} : {{classe}}{% endblock %}

{% block main %}
    <style>
      #ressources_form_web input{width:100px}
      label,#ressources_form_web label{font-size:17px;}
         #ressources_form_web label{position:relative;left:-30px}
    </style>
 <div class="row" style="width:70%;margin:auto">
                            <!-- Textual inputs start -->
                            <div class="col-12 mt-5" style="width:100%" >
                                <div class="card"style="width:100%">
                                    <div class="card-body" style="width:100%">
                                        <h4 class="header-title">{{activation}} >> {{classe}}</h4>
                                         {% for message in app.flashes('verificationRessource') %}
                                          <div class="alert alert-danger">
                                              {{ message }}
                                          </div>
                                      {% endfor %}
										 {{ form_start(form) }}
										 <div class="form-group">
                                            <label for="example-text-input" class="col-form-label">{{ form_label(form.ressource) }}</label>
                                          {{ form_widget(form.ressource) }}
                                        </div>

										 <div class="form-group">
                                            <label for="example-text-input" class="col-form-label">{{ form_label(form.competence) }}</label>
                                          {{ form_widget(form.competence) }}
                                        </div>

										 <div class="form-group">
                                            <label for="example-text-input" class="col-form-label">{{ form_label(form.niveau) }}</label>
                                          {{ form_widget(form.niveau) }}
                                        </div>

										 
										

										

											<div class="col-sm-9 col-sm-offset-3" style="float:right;width:40%">
												<button class="btn btn-primary" type="submit">Valider</button>
												<button type="reset" class="btn btn-default">Annuler</button>
											</div>

										{{ form_end(form) }}
									</div>
								</div>
							</div>
		</div>







   
{% endblock %}
